# OpenWRT Customized RE650 Image
#
# make -j distclean && ./scripts/feeds update -a && ./scripts/feeds install -a
# cp diffconfig-re650 .config && time make defconfig download world -j $(nproc)
#

CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_MULTI_PROFILE=y
CONFIG_TARGET_DEVICE_ramips_mt7621_DEVICE_tplink_re650-v2=y
CONFIG_TARGET_DEVICE_PACKAGES_ramips_mt7621_DEVICE_tplink_re650-v2="-opkg iptables -dnsmasq -ppp -ppp-mod-pppoe -odhcpd -odhcp6c"

CONFIG_ALL_KMODS=n
CONFIG_ALL_NONSHARED=n
CONFIG_DEVEL=y
CONFIG_TARGET_PER_DEVICE_ROOTFS=y

# Trim down the image size
CONFIG_USE_MKLIBS=y
CONFIG_KERNEL_SWAP=n
CONFIG_KERNEL_KALLSYMS=n
CONFIG_KERNEL_ELF_CORE=n
CONFIG_KERNEL_CRASHLOG=n
CONFIG_KERNEL_DEBUG_INFO=n
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_KERNEL_CC_OPTIMIZE_FOR_SIZE=y
CONFIG_KERNEL_CC_STACKPROTECTOR_NONE=y
CONFIG_TARGET_UBIFS_COMPRESSION_ZLIB=y
CONFIG_TARGET_SQUASHFS_BLOCK_SIZE=1024
CONFIG_TARGET_INITRAMFS_COMPRESSION_ZSTD=y

# Target optimizations
CONFIG_KERNEL_CFLAGS="-march=1004kc -mtune=1004kc"
CONFIG_TARGET_OPTIMIZATION="-Os -march=1004kc -mtune=1004kc"
CONFIG_DEFAULT_TARGET_OPTIMIZATION="-Os -march=1004kc -mtune=1004kc"

# Trim down packages
CONFIG_PKG_FORTIFY_SOURCE_NONE=y
CONFIG_PKG_CC_STACKPROTECTOR_NONE=y
CONFIG_EXTRA_GCC_CONFIG_OPTIONS="-Os -march=1004kc -mtune=1004kc"

# Strip down for AP
CONFIG_PACKAGE_opkg=n
CONFIG_PACKAGE_dnsmasq=n
CONFIG_PACKAGE_odhcp6c=n
CONFIG_PACKAGE_odhcpd-ipv6only=n
CONFIG_PACKAGE_ppp=n

# Busybox tweaks
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_FEATURE_EDITING_SAVEHISTORY=y
CONFIG_BUSYBOX_CONFIG_FEATURE_EDITING_SAVE_ON_EXIT=y
CONFIG_BUSYBOX_CONFIG_FEATURE_LESS_FLAGS=y
CONFIG_BUSYBOX_CONFIG_FEATURE_LESS_REGEXP=y
CONFIG_BUSYBOX_CONFIG_FEATURE_LESS_WINCH=y
CONFIG_BUSYBOX_DEFAULT_ASH_OPTIMIZE_FOR_SIZE=y

# Add-on programs
CONFIG_PACKAGE_irqbalance=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_iperf3=y
CONFIG_PACKAGE_kmod-cryptodev=y
CONFIG_PACKAGE_libopenssl-devcrypto=y

# IPv6 support
CONFIG_PACKAGE_6in4=y
CONFIG_PACKAGE_6to4=y
CONFIG_PACKAGE_6rd=y

# WLAN/WPS support
CONFIG_PACKAGE_hostapd-utils=y
CONFIG_WPA_MSG_MIN_PRIORITY=4
CONFIG_PACKAGE_wpad-openssl=y
# CONFIG_PACKAGE_wpad-basic-mbedtls is not set
# CONFIG_PACKAGE_libustream-mbedtls is not set
# CONFIG_PACKAGE_libmbedtls is not set

# SSL certificates
CONFIG_PACKAGE_ca-certificates=y

# Luci (SSL from OpenSSL)
