# cp diffconfig-re650 .config && time make defconfig download world -j $(nproc) PACKAGES="-opkg -dnsmasq -ppp -ppp-mod-pppoe -iptables -ip6tables -odhcpd -odhcp6c -kmod-ipv6 -kmod-ip6tables"
